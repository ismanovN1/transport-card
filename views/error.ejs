<% title = title || "Error" %>

<section class="card p-4 shadow-sm text-center">
    <div class="mb-3">
        <svg width="72" height="72" viewBox="0 0 24 24" fill="none" class="mb-3">
            <circle cx="12" cy="12" r="11" stroke="#dc3545" stroke-width="2" fill="rgba(220,53,69,0.06)" />
            <path d="M8 8l8 8M16 8l-8 8" stroke="#dc3545" stroke-width="2" stroke-linecap="round" />
        </svg>
    </div>

    <h2 class="text-danger"><%= message || "Error" %></h2>

    <% if (description) { %>
    <p class="text-muted mb-3"><%= description %></p>
    <% } %>

    <div>
        <button class="btn btn-outline-secondary" onclick="history.back()">
            Назад
        </button>
    </div>

    <% /* optional auto-redirect after 5 seconds if goTo is provided */ %>
    <% if (goTo && typeof autoRedirect === 'undefined' ? true : autoRedirect) { %>
    <script>
        setTimeout(() => {
            window.location.href = "<%= goTo %>";
        }, 5000);
    </script>
    <% } %>
</section>