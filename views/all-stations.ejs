<% title = "Все остановки" %>
<section class="card p-4 shadow-sm">
  <h2 class="mb-3 text-primary">Все остановки</h2>
  <% if (stations.length === 0) { %>
  <p>Остановки не найдены.</p>
  <% } else { %>
  <ul class="list-group">
    <% stations.forEach(st => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span><b><%= st.id %></b> – <%= st.title %></span>
      <div class="d-flex gap-2">
        <a href="/add-to-black-list?id=<%= st.id %>" class="btn btn-sm btn-danger">Добавить в черный список</a>
        <a href="/update-station?id=<%= st.id %>" class="btn btn-sm btn-warning">Изменить название </a>
      </div>
    </li>
    <% }) %>
  </ul>
  <% } %>
</section>