<% title = "Черный список остановок" %>
<section class="card p-4 shadow-sm">
  <div class="d-flex justify-content-between align-items-center mb-1"><h2 class="mb-3 text-primary">Черный список остановок</h2>
  <a class="btn btn-primary" href="/add-to-black-list">Добавить</a></div>
  
  <% if (stations.length === 0) { %>
    <p>Никаких остановок в черном списке.</p>
  <% } else { %>
    <ul class="list-group">
      <% stations.forEach(st => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= st.id %> - <%= st.title || st.id %>
          <form action="/api/black-list/<%= st.id %>?_method=DELETE" method="post" style="display:inline;">
            <button class="btn btn-sm btn-danger">Удалить</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } %>
</section>
